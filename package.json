{
  "name": "mindful-breath-timer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./dist/style.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./dist/style.css --minify",
    "build:vendor": "mkdir -p public/vendor && cp ./node_modules/d3/dist/d3.min.js public/vendor/d3.min.js",
    "postinstall": "npm run build:vendor"
  },
  "dependencies": {
    "d3": "^7.8.5"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.12",
    "@tailwindcss/cli": "^4.1.12"
  }
}
